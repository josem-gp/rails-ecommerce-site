<main>
  <!-- Product images showcase -->
  <section>
    <h1>This is the Show page of a Product!</h1>
  </section>
  <!-- Detailed product info wrapper -->
  <section>
    <% @product.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
    <% end %>
    <ul>
      <li><%= @product.name %></li>
      <li><%= @product.description %></li>
      <li>Â¥<%= @product.price %></li>
      <li><%= @product.rating %></li>
    </ul>
    <!-- Favoritor -->
    <div>
      <% if current_user %>
        <%= link_to toggle_favorite_product_path(@product), remote: true, method: :post do %>
          <%= render 'pages/like_button', product: @product %>
        <% end %>
      <% end %>
    </div>
    <!-- Cart button -->
    <% if current_user %>
      <%= link_to order_items_path(product_id: @product), remote: true, method: :post do %>
        <button>ADD TO CART</button>
      <% end %>
    <% else %>
      <%= link_to new_user_session_path do %>
        <button>ADD TO CART</button>
      <% end %>
    <% end %>
  </section>
  <!-- Review wrapper -->
  <section>
    <h1><%= "Reviews for #{@product.name}" %></h1>
    <!-- Toggleable Create form  -->
    <div>
      <% if @user %>
        <button>Write a review</button>
        <div>
          <%= simple_form_for([@product, @review], remote: true) do |f| %>
            <%= f.input :rating, required: true %>
            <%= f.input :title %>
            <%= f.input :content, as: :text, input_html: { maxlength: 250 } %>
            <%= f.submit %>
          <% end %>
        </div>
      <% else %>
        <%= link_to new_user_session_path do %>
          <button>Write a review</button>
        <% end %>
      <% end %>
    </div>
    <!-- Rendering of each review -->
    <div>
      <% if @reviews %>
        <% @reviews.each do |review| %>
          <ul>
            <li><%= review.user.username %></li>
            <li><%= review.title %></li>
            <li><%= review.content %></li>
            <li><%= review.rating %></li>
          </ul>
          <!-- Toggleable Edit Form -->
          <% if review.user == @user || current_user == @admin %>
            <%# <button>Edit the review</button> %>
            <%# <div> %>
            <%# simple_form_for([@product, review], remote: true, method: :patch) do |f| %>
              <%# f.input :rating %>
              <%# f.input :title %>
              <%# f.input :content, as: :text %>
              <%# f.submit %>
              <%# end %>
              <%# </div> %>
              <!-- Delete button -->
              <%= link_to "Delete review",
            product_review_path(@product, review),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
            <% end %>
          <% end %>
        <%end %>
      </div>
    </section>
  </main>
  <!-- footer -->
  <footer>
  </footer>
