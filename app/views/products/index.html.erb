<main>
  <!-- Beautiful Image Slider -->
  <section>
    <h1>This is the list of products!</h1>
  </section>
  <!-- Products wrapper -->
  <section>
    <div class="container">
      <% if @products_highlight %>
        <% @products_highlight.each do |product| %>
          <%= link_to product_path(product) do %>
            <ul>
              <li><%= "#{product.pg_search_highlight.split[0...product.name.split.size].join(" ")}".html_safe%></li>
              <li><%= "#{product.pg_search_highlight.split[product.name.split.size..-1].join(" ")}".html_safe %></li>
              <li>¥<%= product.price %></li>
              <li><%= product.rating %></li>
            </ul>
          <% end %>
        <% end %>
      <% else %>
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <ul>
              <li><%= product.name %></li>
              <li><%= product.description %></li>
              <li>¥<%= product.price %></li>
              <div>
                <% if product.rating %>
                  <% product.rating.floor.times do %>
                    <i class="fas fa-star active"></i>
                  <%end %>
                  <% if product.rating.to_s.include?('.5') %>
                    <i class="fas fa-star-half-alt active"></i>
                  <% end %>
                  <% (5 - product.rating.ceil).times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                <% else %>
                  <% 5.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                <%end %>
              </div>
            </ul>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </section>
</main>
