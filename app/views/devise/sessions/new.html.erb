<div class="main-form">
  <div class="form-container">
    <div class="centered-container">
      <h1>Get Started!</h1>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" }, error: 'User is mandatory, please specify one' %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" }, error: 'Password is mandatory, please specify one' %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
      <p>Don't have an account? <%= render "devise/shared/links" %></p>
      <div class="back">
        <%= link_to root_path do %>
          <p><i class="fas fa-chevron-circle-left back-button"></i>Back</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
