<div class="main-form-password">
  <div class="form-container">
    <div class="centered-container">
      <h1>Change your password</h1>
      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, style: "margin: 0;") do |f| %>
        <%= f.error_notification %>
        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>
        <div class="form-inputs">
          <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                label: "Confirm your new password",
                required: true,
                input_html: { autocomplete: "new-password" } %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Change my password" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= image_tag "reset-password.jpg", alt: "Reset Password Form", class: "img-password" %>
</div>
