<main>
  <!-- Image Slider -->
  <section>
    <%= render "pages/shared/carousel" %>
  </section>
  <!-- Introduction section -->
  <section>
    <%= render "pages/shared/intro" %>
  </section>
  <!-- Products wrapper -->
  <section>
    <div class="container">
      <% @products.each do |product| %>
        <!-- Favoritor -->
        <%= render "pages/shared/favoritor", product: product  %>
        <!-- Cart icon -->
        <%= render "pages/shared/cart_display", product: product %>
        <!-- Product info -->
        <%= render "pages/shared/product_display", product: product %>
      <% end %>
    </div>
  </section>
</main>
<!-- Homepage footer -->
<footer>
</footer>
