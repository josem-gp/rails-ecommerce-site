<main>
  <!-- Beautiful Image Slider -->
  <section>
    <h1>This is the homepage!</h1>
  </section>
  <!-- Products wrapper -->
  <section>
    <div class="container">
      <% @products.each do |product| %>
        <!-- Favoritor -->
        <div>
          <% if current_user %>
            <%= link_to toggle_favorite_product_path(product), remote: true, method: :post do %>
              <%= render 'pages/like_button', product: product %>
            <% end %>
          <% end %>
        </div>
        <!-- Cart icon -->
        <div>
          <% if current_user %>
            <%= link_to order_items_path(product_id: product), remote: true, method: :post do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          <% end %>
        </div>
        <!-- Product info -->
        <%= render "pages/shared/product_display", product: product %>
      <% end %>
    </div>
  </section>
</main>
<!-- Homepage footer -->
<footer>
</footer>
