<h1>This is the cart page</h1>
<%= form_tag charges_path do %>
  <article>
    <!-- Logic for error in charges -->
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <main>
      <!-- Breakdown of cart items -->
      <section>
        <% @cart_items.each do |item| %>
          <ul>
            <li><%= item.product.name %></li>
            <li>¥<%= item.product.price %></li>
          </ul>
          <!-- Delete item -->
          <%= link_to "Delete from cart",
            order_item_path(item, order: @order),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        <% end %>
      </section>
      <!-- Total pricing -->
      <section>
        <h3>TOTAL: ¥<%= @order.total %></h3>
      </section>
      <section>
        <%= link_to order_path(@order), remote: true, method: :patch do %>
          <button>Check out</button>
        <% end %>
      </section>
    </main>
    <label class="amount">
      <span>Amount: <%= pretty_amount(@amount) %></span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-email="<%= current_user.email %>"
          data-amount="<%= @amount %>"
          data-email="<%= current_user.email %>"
          data-currency="jpy"
          data-locale="auto"></script>
<% end %>
