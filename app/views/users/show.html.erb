<h1><%= @user.username %>show page!!</h1>
<!-- Render icons modal -->
<%= render 'users/shared/modal' %>
<main>
  <!-- Liked products -->
  <section>
    <% unless !@favorites || @favorites == [] %>
      <h1> Liked products:</h1>
      <% @favorites.each do |favorite| %>
        <ul>
          <li><%= favorite.name %></li>
          <li><%= favorite.price %></li>
          <li><%= favorite.rating %></li>
        </ul>
      <% end %>
    <% end %>
  </section>
  <!-- Orders made -->
  <section>
    <% unless !@orders || @orders == [] %>
      <h1> Orders made: </h1>
      <% @orders.each do |order| %>
        <ul>
          <li>Total: Â¥<%= order.total %>    Date:<%= order.date.strftime('%a, %d %b %Y %H:%M:%S') %></li>
        </ul>
      <% end %>
    <% end %>
  </section>
  <!-- Add new products -->
  <section>
    <% if @user.admin %>
      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :description, as: :text %>
        <%= f.input :price, as: :integer %>
        <%= f.input :availability, collection: 1..2 %>
        <%= f.input :photos, as: :file, input_html: { multiple: true } %>
        <%= f.button :submit %>
      <% end %>
    <% end %>
  </section>
</main>
