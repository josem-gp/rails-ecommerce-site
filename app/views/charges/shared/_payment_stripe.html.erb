<%= form_tag charges_path do %>
  <article>
    <!-- Logic for error in charges -->
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <!-- Breakdown of cart items -->
    <%= render "charges/shared/display_orders", cart_items: cart_items, order: order %>
    <!-- Total pricing -->
    <label class="amount">
      <p>Subtotal: <span><%= pretty_amount(@amount) %></span></p>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button stripe-btn-edit"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="<%= @description %>"
          data-billing-address="true"
          data-amount="<%= @amount %>"
          data-email="<%= current_user.email %>"
          data-currency="jpy"
          data-locale="auto"     
          ></script>
  <button type="submit" class="next-btn">Checkout</button>
  <!-- it is an <a> so it doesnt trigger Stripe checkout -->
  <a class="next-btn go-step-one a-link" data-key="two">Previous</a>
<% end %>
